
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form ng-controller="CategoryValidateController" name="myForm" novalidate style="width: 470px;margin: 0 auto;border:medium;margin-top:10%">

    <fieldset>
        <legend>Validation Demo</legend>

        <p>
           Product Name:<br>
            <input type="text" name="ProductName" ng-model="ProductName" required>
            <span style="color:red" ng-show="myForm.ProductName.$dirty && myForm.ProductName.$invalid">
                <span ng-show="myForm.ProductName.$error.required">Product Name is required.</span>
            </span>
        </p>

        <p>
            Product Alias:<br>
            <input type="text" name="ProductAlias" ng-model="ProductAlias" required>
            <span style="color:red" ng-show="myForm.ProductAlias.$dirty && myForm.ProductAlias.$invalid">
                <span ng-show="myForm.ProductAlias.$error.required">ProductAlias is required.</span>
            </span>
        </p>
        
        <p>
            Create Date:<br>
            <input type="date" name="BirthDate" ng-model="BirthDate" required placeholder="yyyy-MM-dd">
            <span style="color:red" ng-show="myForm.BirthDate.$dirty && myForm.BirthDate.$invalid">
                <span ng-show="myForm.BirthDate.$error.required">Student Birth Date is required.</span>
                <span ng-show="myForm.BirthDate.$error.date">Not a Valid Date.</span>
            </span>
        </p>



        <p>
            Student Email:<br>
            <input type="email" name="email" ng-model="email" required>
            <span style="color:red" ng-show="myForm.email.$dirty && myForm.email.$invalid">
                <span ng-show="myForm.email.$error.required">Email is required.</span>
                <span ng-show="myForm.email.$error.email">Invalid email address.</span>
            </span>
        </p>



        <p>
            Student Percentage Marks:<br>
            <input type="number" name="marks" ng-model="marks" max="100" required>
            <span style="color:red" ng-show="myForm.marks.$dirty && myForm.marks.$invalid">
                <span ng-show="myForm.marks.$error.required">Email is required.</span>
                <span ng-show="myForm.marks.$error.number">Invalid number.</span>
                <span ng-show="myForm.marks.$error.max">Max Percentage is 100.</span>
            </span>
        </p>



        <p>

            <div>
                <input class="btn" type="submit" value="submit" />
            </div>



    </fieldset>
</form>

